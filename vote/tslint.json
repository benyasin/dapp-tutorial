{
  "extends": [
    "./node_modules/robin-lint/index.json"
  ],
  "defaultSeverity": "warning",
  "rules": {
    "no-console": "off",
    "no-restricted-syntax": [
      "error",
      {
        "selector": "CallExpression[callee.object.name='console'][callee.property.name!=/^(log|warn|error|info|trace)$/]",
        "message": "Unexpected property on console object was called"
      }
    ],
    "as-internal-case": {},
    "as-internal-diagnostics": {},
    "indent": {
      "options": [
        "spaces",
        2
      ]
    },
    "max-line-length": {
      "options": [
        {
          "limit": 120,
          "ignore-pattern": " *DiagnosticCode\\.[^ ]+,$"
        }
      ]
    },
    "member-access": {
      "options": [
        "no-public"
      ]
    },
    "semicolon": {
      "options": [
        "always"
      ]
    },
    "whitespace": {
      "options": [
        "check-branch",
        "check-decl",
        "check-operator",
        "check-module",
        "check-rest-spread",
        "check-type",
        "check-type-operator",
        "check-preblock"
      ]
    }
  },
  "jsRules": {
    "max-line-length": {
      "options": [
        {
          "limit": 120,
          "ignore-pattern": " *DiagnosticCode\\.[^ ]+,$"
        }
      ]
    },
    "radix": {},
    "semicolon": {
      "options": [
        "always"
      ]
    }
  }
}
